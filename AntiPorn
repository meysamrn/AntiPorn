Backup(){
  echo "# Backup Old /etc/hosts To /etc/hosts_old"
  sleep 1
  `sudo cp /etc/hosts /etc/hosts_old`
  sleep 2
  echo "# Backup Done Successfully !"  
  sleep 1
  }
  
Rename(){
  echo "# Renaming old AntiPornHosts To hosts"
  sleep 1
  `sudo mv PornHosts hosts`
  sleep 2
  echo "# Renaming Done Successfully !"  
  sleep 1
  }
  
Replace(){
  echo "# Replacing new hosts With old /etc/hosts"
  sleep 1
  `sudo cp hosts /etc/hosts`
  sleep 2
  echo "# Replacing Done Successfully !"  
  sleep 1
  }
 
Intall(){
  clear 
  sleep 1
  Backup
  sleep 1
  Rename
  sleep 1
  Replace
  sleep 1
  echo "# AntiPorn Installing Successfully !"  
  sleep 5
}


# this is the main function
Menu() {
